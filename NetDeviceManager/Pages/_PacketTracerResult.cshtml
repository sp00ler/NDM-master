@model PTResponse
<hr />
<div class="conteiner">
<div class="row">
    <div class="col-2">
        Фаза
    </div>
    <div class="col-2">
        Результат
    </div>
    <div class="col-8">
        Сведения
    </div>
</div>
</div>
@foreach (var phase in Model.PtPhases)
{
    <div class="container border border-end-0 border-start-0">
       
        <div class="row @(phase.Result == "DROP" ? "bg-danger" : "bg-success")">
            <div class="col-2">
                @phase.Type
            </div>
            <div class="col-2 ">
                @phase.Result
            </div>
            <div class="col-8 ">
                @phase.Extra
            </div>
        </div>
    </div>
}
<hr />
<div class="container">
    <div class="row">
        <div class="col-1">
            Итог
        </div>
        <div class="col-2">
            Вход
        </div>
        <div class="col-2">
            Выход
        </div>
        <div class="col-7">
            Причина
        </div>
    </div>
    <div class="row @(Model.PtResult.Action == "drop" ? "bg-danger" : "bg-success")">

        <div class="col-1">
            @Model.PtResult.Action.ToUpper()
        </div>
        <div class="col-2">
            @Model.PtResult.InputIf
        </div>
        <div class="col-2">
            @Model.PtResult.OutputIf
        </div>
        <div class="col-7">
            @Model.PtResult.Reason
        </div>
    </div>
</div>
